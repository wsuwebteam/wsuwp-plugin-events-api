<?xml version="1.0"?>
<ruleset name="WSUWP Code">
	<!-- see available rules at https://github.com/squizlabs/PHP_CodeSniffer/wiki/Customisable-Sniff-Properties -->
	<!-- Wordpress rules at https://github.com/WordPress/WordPress-Coding-Standards/blob/develop/WordPress-Core/ruleset.xml -->

	<!-- Check only PHP files -->
    <arg name="extensions" value="php"/>

    <description>Sniffs for the coding standards of the WSUWP Content Visibility plugin</description>
    <rule ref="WordPress"></rule>
    <rule ref="WordPress-Extra"></rule>
    <rule ref="WordPress-Core"></rule>
    <rule ref="WordPress-Docs"></rule>

    <!-- Custom -->
    <rule ref="WordPress">
        <exclude name="WordPress.PHP.DisallowShortTernary.Found" />
        <exclude name="PSR2.Methods.FunctionClosingBrace" />
    </rule>
</ruleset>


